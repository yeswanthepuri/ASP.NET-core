@model IEnumerable<Employee>

@{
    ViewBag.Title= "Employ List";
}

<h1>Index</h1>

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var image = "~/images/" + (employee.PhotoPath ?? "Yeswanth_IrionMan.jpg");
        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Fname</h3>
            </div>
            <img class="card-img-top" src="@image" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Detail" asp-route-id="@employee.ID"  class="btn btn-primary m-1">View</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.ID"  class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
